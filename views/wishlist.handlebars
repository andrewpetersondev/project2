<main class="container">

    {{!-- row 1 --}}
    <div class="row">
        {{#each wishlist}}
        <div class="col s12 m6 l4 xl3">

            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator responsive-img" src="{{product.image_url}}">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{product.name}}<i
                            class="material-icons right">more_vert</i></span>
                    <p><a href="{{product.url}}">visite website</a></p>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Edit<i
                            class="material-icons right">close</i></span>
                    <p><a href="#" class="delete" data-id="{{product.id}}">delete from wishlist</a></p>
                </div>
            </div>

        </div>
    {{/each}}
        
    </div>
    {{!-- // row 1 --}}
    

